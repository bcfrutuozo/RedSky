@model RedSky.Presentation.Web.ViewModels.LoginViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kopernik</title>
    <link rel="icon" type="image/png" href="~/Images/logo-sm-op.png" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")

    <script type="text/javascript" language="javascript">
        $(document).ready(function () {
            $(".error-fade").delay(3000).fadeOut(2000);
        });
    </script>
</head>
<body class="body-login">
<div class="centerBlock">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form_login">
            <img class="img-rounded" src="~/Images/logo.png" style="height: 50%; margin: 0px 10px 0px -5px; width: 50%;">
            <fieldset class="login_fieldset">
                <legend></legend>

                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                <div class="login_field">
                    <div class="left">
                        <label>Empresa</label>
                    </div>
                    <div class="right">
                        @Html.EditorFor(model => model.Empresa, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.Empresa, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="login_field">
                    <div class="left">
                        <label>Usuário</label>
                    </div>
                    <div class="right">
                        @Html.EditorFor(model => model.Usuario, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.Usuario, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="login_field">
                    <div class="left">
                        <label>Senha</label>
                    </div>
                    <div class="right">
                        @Html.PasswordFor(model => model.Senha, new {@class = "form-control input"})
                        @Html.ValidationMessageFor(model => model.Senha, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="login_field">
                    <div class="left"></div>
                    <div class="right">
                        @Html.CheckBoxFor(model => model.RememberMe, new {@class = "checkBoxlogin"})
                        <label>Mantenha-me logado</label>
                    </div>
                </div>

                <div class="login_field">
                    <div class="left"></div>
                    <div class="right">
                        <input type="submit" value="Entrar" class="btn btn-redSky"/>
                        @if (ViewBag.Message != null)
                        {
                            <strong class="error-fade">@ViewBag.Message</strong>
                        }
                    </div>
                </div>
            </fieldset>
        </div>
    }
</div>
</body>
</html>