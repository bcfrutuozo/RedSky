        @* Detalha os serviços caso o demonstrativo possua serviços *@
        @if (Model.CertificadosDigitais.Count > 0)
        {
            <table class="table table-responsive">
                <thead>
                <tr>
                    <td>@Html.DisplayNameFor(modelsvc => modelsvc.CertificadosDigitais.FirstOrDefault().NomeEmpresarial)</td>
                    <td>@Html.DisplayNameFor(modelsvc => modelsvc.CertificadosDigitais.FirstOrDefault().ValidDate)</td>
                    <td>@Html.DisplayNameFor(modelsvc => modelsvc.CertificadosDigitais.FirstOrDefault().ExpiryDate)</td>
                    <td>@Html.DisplayNameFor(modelsvc => modelsvc.CertificadosDigitais.FirstOrDefault().SerialNumber)</td>
                </tr>
                </thead>
                @foreach (var cert in Model.CertificadosDigitais)
                {
                    <tr>
                        <td>@Html.DisplayFor(svc => cert.NomeEmpresarial)</td>
                        <td>@Html.DisplayFor(svc => cert.ValidDate)</td>
                        <td>@Html.DisplayFor(svc => cert.ExpiryDate)</td>
                        <td>@Html.DisplayFor(svc => cert.SerialNumber)</td>

                        <td>
                            <a href="@Url.Action("Details", "CertificadosDigitais", new RouteValueDictionary(new {id = cert.Id}))">Detalhar</a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete", "CertificadosDigitais", new RouteValueDictionary(new {id = cert.Id}))">Apagar</a>
                        </td>
                    </tr>
                }
            </table>
        }


        <div class="form-group">
