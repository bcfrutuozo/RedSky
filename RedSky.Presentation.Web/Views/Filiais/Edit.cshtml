@model RedSky.Presentation.Web.ViewModels.FilialViewModel

@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = "Atualizar Cliente - " + Model.Identificacao;
}
<script>
    $(document).ready(function() {
        $("#IdEstado").change(function() {
            $.get("../GetAllCidadePorEstado",
                { IdEstado: $("#IdEstado").val() },
                function(data) {
                    $("#IdCidade").empty();
                    $.each(data,
                        function(index, row) {
                            $("#IdCidade").append("<option value='" + row.Id + "'>" + row.Nome + "</option>");
                        });
                });
        });
    });
</script>

